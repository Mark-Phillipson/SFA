
@page "/links"
@inject HttpClient Http
@using Microsoft.AspNetCore.Components.Web
<PageTitle>Club Links</PageTitle>

<h1 style="color: #003366;">Cycling & Club Links</h1>

<div class="filter-row">
    <div class="filter-half filter-input-group">
        <input type="text" @bind="filterText" @bind:event="oninput" placeholder="Filter links..." class="filter-input" @ref="filterInputRef" />
        <button type="button" @onclick="ClearFilter" title="Clear filter" class="clear-filter-btn">
            <span aria-label="Clear filter">‚úñÔ∏è</span>
        </button>
    </div>
    <div class="filter-half">
        <select @bind="selectedCategory" class="category-select">
            <option value="">All Categories</option>
            @foreach (var cat in categories)
            {
                <option value="@cat">@cat</option>
            }
        </select>
    </div>
</div>


@if (links == null)
{
    <p>Loading links...</p>
}
else
{
    var filteredLinks = links
        .Where(l => (string.IsNullOrWhiteSpace(selectedCategory) || (l.category?.Equals(selectedCategory, StringComparison.OrdinalIgnoreCase) ?? false))
            && (string.IsNullOrWhiteSpace(filterText)
                || (l.description?.Contains(filterText, StringComparison.OrdinalIgnoreCase) ?? false)
                || (l.url?.Contains(filterText, StringComparison.OrdinalIgnoreCase) ?? false)))
        .ToList();
    <div class="links-flex-container" style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
            @foreach (var link in filteredLinks)
            {
                <div style="display: flex; flex-direction: column; align-items: flex-start; background: #f8f9fa; border-radius: 1em; box-shadow: 0 1px 4px rgba(0,0,0,0.04); padding: 1em; margin-bottom: 0.5em; min-width: 220px;">
                    <a href="@link.url" target="_blank" class="btn btn-outline-primary btn-lg" style="text-decoration: none; display: flex; align-items: center; gap: 0.7em; width: 100%; justify-content: flex-start;">
                        @if ((link.url?.Contains("github.com/Mark-Phillipson/SFA/issues") ?? false))
                        {
                            <img src="github-logo.svg" alt="GitHub" style="height:2.5em;width:2.5em;" />
                            <span style="font-size:1.3em; font-weight:500;">GitHub Issues (Feedback)</span>
                        }
                        else if (link.url != null && link.url.Contains("facebook.com"))
                        {
                            <i class="bi bi-facebook" style="font-size:2.5em;color:#1877f3;" aria-label="Facebook"></i>
                            <span style="font-size:1.3em; font-weight:500;">@link.description</span>
                        }
                        else if (link.url != null && (link.url.Contains("twitter.com") || link.description?.Equals("X", StringComparison.OrdinalIgnoreCase) == true))
                        {
                            <i class="bi bi-twitter-x" style="font-size:2.5em;color:#000;" aria-label="X (Twitter)"></i>
                            <span style="font-size:1.3em; font-weight:500;">@link.description</span>
                        }
                        else if (link.url != null && link.url.Contains("instagram.com"))
                        {
                            <i class="bi bi-instagram" style="font-size:2.5em;color:#C13584;" aria-label="Instagram"></i>
                            <span style="font-size:1.3em; font-weight:500;">@link.description</span>
                        }
                        else if (link.url != null && link.url.Contains("whatsapp.com"))
                        {
                            <i class="bi bi-whatsapp" style="font-size:2.5em;color:#25D366;" aria-label="WhatsApp"></i>
                            <span style="font-size:1.3em; font-weight:500;">@link.description</span>
                        }
                        else if (link.url != null && link.url.Contains("strava.com"))
                        {
                            <i class="bi bi-activity" style="font-size:2.5em;color:#fc4c02;" aria-label="Strava"></i>
                            <span style="font-size:1.3em; font-weight:500;">@link.description</span>
                        }
                        else
                        {
                            <span style="font-size:2.5em;">@(link.emoji ?? "")</span>
                            <span style="font-size:1.3em; font-weight:500;">@link.description</span>
                        }
                    </a>
                    @if ((link.description?.Contains("BBC Weather", StringComparison.OrdinalIgnoreCase) ?? false) && (link.url?.Contains("2642965") ?? false))
                    {
                        <span style="font-size:1em; color:#555; margin-top:0.4em; margin-left:0.2em;">üì± For best experience, install the BBC Weather app.</span>
                    }
                </div>
            }

    </div>
}



@code {

    private List<LinkItem>? links;
    private string filterText = string.Empty;
    private string selectedCategory = string.Empty;
    private List<string> categories = new();
    private ElementReference filterInputRef;
    private bool _hasSetFocus = false;


    protected override async Task OnInitializedAsync()
    {
        try
        {
            links = await Http.GetFromJsonAsync<List<LinkItem>>("sample-data/links.json");
            if (links != null)
            {
                categories = links
                    .Select(l => l.category)
                    .Where(c => !string.IsNullOrWhiteSpace(c))
                    .Select(c => c!)
                    .Distinct(StringComparer.OrdinalIgnoreCase)
                    .OrderBy(c => c)
                    .ToList();
            }
        }
        catch
        {
            links = new List<LinkItem>();
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!_hasSetFocus)
        {
            _hasSetFocus = true;
            await filterInputRef.FocusAsync();
        }
    }


    private async Task ClearFilter()
    {
        filterText = string.Empty;
        selectedCategory = string.Empty;
        await Task.Yield(); // Ensure UI updates before focusing
        await filterInputRef.FocusAsync();
    }

    public class LinkItem
    {
    public string? description { get; set; }
    public string? url { get; set; }
    public string? emoji { get; set; }
    public string? category { get; set; }
    }
}


