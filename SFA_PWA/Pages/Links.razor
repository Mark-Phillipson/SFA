
@page "/links"
@using Microsoft.AspNetCore.Components.Web
<PageTitle>Club Links</PageTitle>

<h1>San Fairy Ann Club Links</h1>


@inject HttpClient Http

<h2>Useful Links</h2>

<input type="text" @bind="filterText" placeholder="Filter links..." style="margin-bottom:1rem;width:100%;padding:0.5rem;" />

@if (links == null)
{
    <p>Loading links...</p>
}
else
{
    var filteredLinks = string.IsNullOrWhiteSpace(filterText)
        ? links
        : links.Where(l => (l.description?.Contains(filterText, StringComparison.OrdinalIgnoreCase) ?? false)
                      || (l.url?.Contains(filterText, StringComparison.OrdinalIgnoreCase) ?? false)).ToList();
    <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
        @foreach (var link in filteredLinks)
        {
            <div style="display: flex; flex-direction: column; align-items: flex-start;">
                <a href="@link.url" target="_blank" class="btn btn-outline-primary btn-sm" style="text-decoration: none; display: flex; align-items: center; gap: 0.5em;">
                    <span style="font-size:1.5em;">@(link.emoji ?? "")</span>
                    <span>@link.description</span>
                </a>
                @if ((link.description?.Contains("BBC Weather", StringComparison.OrdinalIgnoreCase) ?? false) && (link.url?.Contains("2642965") ?? false))
                {
                    <span style="font-size:0.9em; color:#555; margin-top:0.2em; margin-left:0.2em;">ðŸ“± For best experience, install the BBC Weather app.</span>
                }
            </div>
        }
    </div>
}



@code {
    private List<LinkItem>? links;
    private string filterText = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            links = await Http.GetFromJsonAsync<List<LinkItem>>("sample-data/links.json");
        }
        catch
        {
            links = new List<LinkItem>();
        }
    }

    public class LinkItem
    {
        public string? description { get; set; }
        public string? url { get; set; }
        public string? emoji { get; set; }
    }
}
