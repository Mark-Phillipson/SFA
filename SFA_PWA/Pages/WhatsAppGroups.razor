@page "/whatsapp-groups"
@using SFA_PWA.Shared

<PageTitle>WhatsApp Groups</PageTitle>
<h2 class="mb-4 text-center">WhatsApp Groups</h2>

<div class="container py-4">
    <div class="alert alert-warning mb-4" role="alert">
        <strong>Important:</strong> To join a group, please contact the ride coordinators directly or request access via the SFACC Community group. 
    </div>
    <div class="mb-4 text-center">
        <img src="\WhatsappGroups.png" alt="WhatsApp Communities mobile screenshot" style="max-width:320px;width:100%;border-radius:1rem;box-shadow:0 2px 8px rgba(0,0,0,0.08);" />
        <div class="mt-2 text-muted" style="font-size:0.95rem;">Screenshot: WhatsApp Communities on mobile showing access to different groups.</div>
    </div>
    <div class="alert alert-info mb-4" role="alert">
        <strong>Tip:</strong> WhatsApp is available on desktop (PC and Mac) as well as mobile devices. Members can use WhatsApp on their computer for easier group communication and access.
        @if (IsDesktop)
        {
            <div class="mt-2">
                <a href="https://web.whatsapp.com/" target="_blank" rel="noopener" class="btn btn-success">
                    Open WhatsApp Web
                </a>
            </div>
        }
    </div>

    @code {
        private bool IsDesktop = false;

        protected override async Task OnInitializedAsync()
        {
            IsDesktop = await JS.InvokeAsync<bool>("isDesktop");
        }

        [Inject] IJSRuntime JS { get; set; } = default!;
    }
</div>
