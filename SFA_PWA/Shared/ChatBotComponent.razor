


@using System.Collections.Generic
@using Microsoft.JSInterop

<div class="chatbot-container">
    <div class="chat-header">SFA Bot</div>
    <div class="chat-messages" @ref="messagesContainer">
        @if (Messages.Count == 0)
        {
            <div class="chat-message bot">
                <span class="avatar">ðŸ¤–</span>
                <div class="bubble">
                    ðŸ‘‹ Welcome to the San Fairy Ann Cycling Club! I'm your Club Assistant. I can help you with membership info, club runs, safety & insurance, meetings & complaints, or contacting a club officer. Just type your question or topic in plain text to get started.
                </div>
            </div>
        }
        @foreach (var message in Messages)
        {
              <div class="chat-message @(message.IsUser ? "user" : "bot")">
                 <span class="avatar">@(message.IsUser ? "ðŸ˜Š" : "ðŸ¤–")</span>
                 <div class="bubble">
                     @if (message.IsUser)
                     {
                         @message.Text
                     }
                     else
                     {
                         @((MarkupString)ConvertUrlsToLinks(message.Text))
                     }
                 </div>
              </div>
        }
    </div>
    <div class="chat-input-row">
    <input class="chat-input" @bind="CurrentMessage" placeholder="Type a message..." @onkeyup="@(async e => await HandleInputKeyDown(e))" disabled="@IsLoading" @ref="chatInputRef" />
        <button class="send-btn" @onclick="SendMessage" disabled="@IsLoading">Send</button>
    </div>
    @if (IsLoading)
    {
        <div class="loading-indicator">Bot is thinking...</div>
    }
</div>


@inject IJSRuntime JSRuntime
@inject HttpClient Http

@code {
    public class ChatMessage
    {
        public string? Text { get; set; }
        public bool IsUser { get; set; }
    }

    private List<ChatMessage> Messages = new();
    private string CurrentMessage = string.Empty;
    private ElementReference messagesContainer;
    private ElementReference chatInputRef;
    private int lastMessageCount = 0;
    private bool IsLoading = false;

    // Converts URLs in text to clickable anchor tags
    private string ConvertUrlsToLinks(string text)
    {
        if (string.IsNullOrEmpty(text)) return "";
        // Simple regex for URLs
        var urlPattern = @"(https?://[\w\-\.\?\,\'/\\\+&%\$#_=:\(\)~]+)";
        return System.Text.RegularExpressions.Regex.Replace(
            text,
            urlPattern,
            match => $"<a href=\"{match.Value}\" target=\"_blank\" rel=\"noopener noreferrer\">{match.Value}</a>"
        );
    }

    private async Task SendMessage()
    {
        if (!string.IsNullOrWhiteSpace(CurrentMessage) && !IsLoading)
        {
            var userMessage = CurrentMessage;
            Messages.Add(new ChatMessage { Text = userMessage, IsUser = true });
            CurrentMessage = string.Empty;
            IsLoading = true;
            await InvokeAsync(StateHasChanged);

            try
            {
                var request = new ChatRequest { Message = userMessage };
                var apiUrl = "https://localhost:7289/api/bot/chat";
                var response = await Http.PostAsJsonAsync(apiUrl, request);
                if (response.IsSuccessStatusCode)
                {
                    var chatResponse = await response.Content.ReadFromJsonAsync<ChatResponse>();
                    Messages.Add(new ChatMessage { Text = chatResponse?.Reply ?? "(No reply)", IsUser = false });
                }
                else
                {
                    var errorText = $"Error contacting bot: {response.StatusCode} - {await response.Content.ReadAsStringAsync()}";
                    Messages.Add(new ChatMessage { Text = errorText, IsUser = false });
                }
            }
            catch (Exception ex)
            {
                Messages.Add(new ChatMessage { Text = $"Exception: {ex.Message}", IsUser = false });
            }
            IsLoading = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    public class ChatRequest
    {
        public string Message { get; set; } = string.Empty;
    }

    public class ChatResponse
    {
        public string Reply { get; set; } = string.Empty;
    }

    private async Task HandleInputKeyDown(Microsoft.AspNetCore.Components.Web.KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SendMessage();
        }
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("focusElement", chatInputRef);
            }
            catch (JSException ex)
            {
                Console.WriteLine($"JSInterop error: {ex.Message}");
            }
        }
        if (lastMessageCount != Messages.Count)
        {
            lastMessageCount = Messages.Count;
            try
            {
                await JSRuntime.InvokeVoidAsync("scrollToBottom", messagesContainer);
            }
            catch (JSException ex)
            {
                Console.WriteLine($"JSInterop error: {ex.Message}");
            }
        }
    }
 
}
